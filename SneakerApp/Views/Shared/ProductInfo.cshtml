@model SneakerApp.Models.Product

<div class="card-body">

    <h3 class="card-title alert-success py-2 px-3 rounded-2">@Model.Name</h3>
    @if (@Model.Image.Contains(".mp4") || @Model.Image.Contains(".mov"))
    {
        <video width="550" height="300" controls>
            <source src="@Model.Image" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    }
    else
    {
        <img src="@Model.Image" alt="Article Image" style="width: 100%; height: auto; max-height: 300px; object-fit: cover;" />
    }

    <strong>
        <div class="card-text mt-2">@Model.Description</div>

        <div class="d-flex justify-content-between flex-row">
            <div class="card-text">Stock: @Model.Stock</div>
            <div class="card-text">$@Model.Price</div>
        </div>
    </strong>

    <div class="d-flex justify-content-between flex-row mt-3">

        <div><i class="bi bi-globe"></i> @Model.Category.CategoryName</div>
        <div><i class="bi bi-person"></i> @Model.User.UserName</div>
    </div>

</div>